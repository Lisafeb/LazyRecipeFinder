@model LazyRecipe.Models.Recipe
@{
    ViewBag.Title = "Home Page";
}
<link href='https://fonts.googleapis.com/css?family=Amiko' rel='stylesheet'>
<div class="content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <form action="/Recipes" method="get" class="form-inline">
                <div class="form-group">
                    <div class="input-group" style="width:100%">
                        <input class="form-control" id="SearchString" name="SearchString" type="text" value="">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">search</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active" >
                        
                        @{
                            List<LazyRecipe.ViewModels.Ingredien> ingredients = ViewBag.Ingredients;
                            <img style="width:50%; margin:10px auto;" src="~/Content/images/fruits.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 1)
                                {
                                    <label class="btn btn-primary fruits">
                                        <input type="checkbox"
                                               name="selectedIngredients"
                                               class="badgebox"
                                               value="@ingredient.IngredientID" />
                                        @ingredient.IngredientName
                                        <span class="badge">&check;</span>
                                    </label>
                                }
                            }
                        }
                    </div>

                    <div class="item">
                       @{

                            <img style="width:50%; margin:10px auto;" src="~/Content/images/meat.png" />
                           foreach (var ingredient in ingredients)
                           {
                               if (@ingredient.IngredientCategory == 2)
                               {
                                <label class="btn btn-primary meat">
                                    <input type="checkbox"
                                           name="selectedIngredients"
                                           class="badgebox"
                                           value="@ingredient.IngredientID" />
                                    @ingredient.IngredientName 
                                    <span class="badge">&check;</span>
                                </label>
                               }
                           }
                    }
                    </div>

                    <div class="item">
                        @{

                            <img style="width:50%; margin:10px auto;" src="~/Content/images/diary.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 3)
                                {
                                    <label class="btn btn-primary dairy">
                                        <input type="checkbox"
                                               name="selectedIngredients"
                                               class="badgebox"
                                               value="@ingredient.IngredientID" />
                                        @ingredient.IngredientName 
                                        <span class="badge">&check;</span>
                                    </label>
                                }
                            }
                        }
                    </div>
                    <div class="item" >
                        @{

                            <img style="width:50%; margin:10px auto;" src="~/Content/images/grain.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 4)
                                {
                                    <label class="btn btn-primary grains">
                                        <input type="checkbox"
                                               name="selectedIngredients"
                                               class="badgebox"
                                               value="@ingredient.IngredientID" />
                                        @ingredient.IngredientName
                                        <span class="badge">&check;</span>
                                    </label>
                                }
                            }
                        }
                    </div>
                    <div class="item" id="seasoning">
                        @{

                            <img style="width:50%; margin:10px auto;" src="~/Content/images/salt.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 5)
                                {
                                    <label class="btn btn-primary seasoning">
                                        <input type="checkbox"
                                               name="selectedIngredients"
                                               class="badgebox"
                                               value="@ingredient.IngredientID" />
                                        @ingredient.IngredientName
                                        <span class="badge">&check;</span>
                                    </label>
                                }
                            }
                        }
                    </div>
                    <div class="item" id="vegetables">
                        @{

                            <img style="width:50%; margin:10px auto;" src="~/Content/images/veggies.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 0)
                                {
                                    <label class="btn btn-primary veggies">
                                        <input type="checkbox"
                                               name="selectedIngredients"
                                               class="badgebox"
                                               value="@ingredient.IngredientID" />
                                        @ingredient.IngredientName
                                        <span class="badge">&check;</span>
                                    </label>
                                }
                            }
                        }
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
