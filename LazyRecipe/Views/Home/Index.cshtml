@model LazyRecipe.Models.Recipe
@{
    ViewBag.Title = "Home Page";
}

<div class="content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <form action="/Recipes" method="get" class="form-inline">
                <div class="form-group">
                    <div class="input-group" style="width:100%">
                        <input class="form-control" id="SearchString" name="SearchString" type="text" value="">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">search</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        
                        @{
                            List<LazyRecipe.ViewModels.Ingredien> ingredients = ViewBag.Ingredients;

                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 1)
                                {
                                    <label class="btn btn-primary">
                                        <input type="checkbox"
                                               name="selectedIngredients"
                                               class="badgebox"
                                               value="@ingredient.IngredientID" />
                                        @ingredient.IngredientName @ingredient.IngredientCategory
                                        <span class="badge">&check;</span>
                                    </label>
                                }



                            }

                        }
                    </div>

                    <div class="item">
                       @{
                         

                           foreach (var ingredient in ingredients)
                           {
                               if (@ingredient.IngredientCategory == 2)
                               {
                                <label class="btn btn-primary">
                                    <input type="checkbox"
                                           name="selectedIngredients"
                                           class="badgebox"
                                           value="@ingredient.IngredientID" />
                                    @ingredient.IngredientName @ingredient.IngredientCategory
                                    <span class="badge">&check;</span>
                                </label>
                               }



                           }

                    }
                    </div>

                    <div class="item">
                        @{
                          

                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 3)
                                {
                                    <label class="btn btn-primary">
                                        <input type="checkbox"
                                               name="selectedIngredients"
                                               class="badgebox"
                                               value="@ingredient.IngredientID" />
                                        @ingredient.IngredientName @ingredient.IngredientCategory
                                        <span class="badge">&check;</span>
                                    </label>
                                }



                            }

                        }
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
