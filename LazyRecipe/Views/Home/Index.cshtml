@model LazyRecipe.Models.Recipe
@{
    ViewBag.Title = "Home Page";
}
<link href='https://fonts.googleapis.com/css?family=Amiko' rel='stylesheet'>
<div class="content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <form action="/Recipes" method="get" class="form-inline">
                <div class="row" style=" display: flex;flex-wrap: wrap;">
                    <div class="col-md-8" style="display: flex;flex-direction: column;">
                        <div class="form-group" style="width:100%">
                            <div class="input-group" style="display:flex;">
                                <input class="form-control" style="height:45px; font-size:18px" id="SearchString" placeholder="What do you have in your fridge?" name="SearchString" type="text" value="">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center" style="display: flex;flex-direction: column;">
                        <button type="submit" style="flex:1;margin-bottom:0px" class="btn btn-primary">search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <div class='carousel-outer'>

                    <!-- Indicators -->
                    <ol class='carousel-indicators'>
                        <li data-target='#myCarousel' data-slide-to='0' class='active'><img style="max-width:50px" src='~/Content/images/fruits.png' alt='' /></li>
                        <li data-target='#myCarousel' data-slide-to='1'><img style="max-width:50px" src='~/Content/images/meat.png' alt='' /></li>
                        <li data-target='#myCarousel' data-slide-to='2'><img style="max-width:50px" src='~/Content/images/diary.png' alt='' /></li>
                        <li data-target='#myCarousel' data-slide-to='3'><img style="max-width:50px" src='~/Content/images/grain.png' alt='' /></li>
                        <li data-target='#myCarousel' data-slide-to='4'><img style="max-width:50px" src='~/Content/images/salt.png' alt='' /></li>
                        <li data-target='#myCarousel' data-slide-to='5'><img style="max-width:50px" src='~/Content/images/veggies.png' alt='' /></li>

                    </ol>

                    <!-- Wrapper for food categories -->
                    <div class="carousel-inner">

                        <div class="item active">

                            @{
                            List<LazyRecipe.ViewModels.Ingredien> ingredients = ViewBag.Ingredients;
                        <img style="width:20%; margin:10px auto;" src="~/Content/images/fruits.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 1)
                                {
                        <label class="btn btn-primary fruits" id="checkboxes">
                            <input type="checkbox"
                                   id="@ingredient.IngredientName"
                                   name="selectedIngredients"
                                   class="badgebox"
                                   value="@ingredient.IngredientID" />
                            @ingredient.IngredientName
                            <span class="badge">&check;</span>
                        </label>
                                }
                            }
                            }
                        </div>

                        <div class="item">
                            @{

                                <img style="width:20%; margin:10px auto;" src="~/Content/images/meat.png" />
                           foreach (var ingredient in ingredients)
                           {
                               if (@ingredient.IngredientCategory == 2)
                               {
                        <label class="btn btn-primary meat">
                            <input type="checkbox"
                                   name="selectedIngredients"
                                   id="@ingredient.IngredientName"
                                   class="badgebox"
                                   value="@ingredient.IngredientID" />
                            @ingredient.IngredientName
                            <span class="badge">&check;</span>
                        </label>
                               }
                           }
                            }
                        </div>

                        <div class="item">
                            @{

                                <img style="width:20%; margin:10px auto;" src="~/Content/images/diary.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 3)
                                {
                        <label class="btn btn-primary dairy">
                            <input type="checkbox"
                                   name="selectedIngredients"
                                   id="@ingredient.IngredientName"
                                   class="badgebox"
                                   value="@ingredient.IngredientID" />
                            @ingredient.IngredientName
                            <span class="badge">&check;</span>
                        </label>
                                }
                            }
                            }
                        </div>
                        <div class="item">
                            @{

                                <img style="width:20%; margin:10px auto;" src="~/Content/images/grain.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 4)
                                {
                        <label class="btn btn-primary grains">
                            <input type="checkbox"
                                   name="selectedIngredients"
                                   id="@ingredient.IngredientName"
                                   class="badgebox"
                                   value="@ingredient.IngredientID" />
                            @ingredient.IngredientName
                            <span class="badge">&check;</span>
                        </label>
                                }
                            }
                            }
                        </div>
                        <div class="item" id="seasoning">
                            @{

                                <img style="width:20%; margin:10px auto;" src="~/Content/images/salt.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 5)
                                {
                        <label class="btn btn-primary seasoning">
                            <input type="checkbox"
                                   name="selectedIngredients"
                                   id="@ingredient.IngredientName"
                                   class="badgebox"
                                   value="@ingredient.IngredientID" />
                            @ingredient.IngredientName
                            <span class="badge">&check;</span>
                        </label>
                                }
                            }
                            }
                        </div>
                        <div class="item" id="vegetables">
                            @{

                                <img style="width:20%; margin:10px auto;" src="~/Content/images/veggies.png" />
                            foreach (var ingredient in ingredients)
                            {
                                if (@ingredient.IngredientCategory == 0)
                                {
                        <label id="checkboxes" class="btn btn-primary veggies">
                            <input type="checkbox"
                                   name="selectedIngredients"
                                   id="@ingredient.IngredientName"
                                   class="badgebox"
                                   value="@ingredient.IngredientID" />
                            @ingredient.IngredientName
                            <span class="badge">&check;</span>
                        </label>
                                }
                            }
                            }
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>

                    
                </div>
            </div>
