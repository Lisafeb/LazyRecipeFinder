@model IEnumerable<LazyRecipe.Models.Recipe>
@using LazyRecipe.Models;

@{
    ViewBag.Title = "Index";
}
<link href='https://fonts.googleapis.com/css?family=Amiko' rel='stylesheet'>
<div class="content" style="background: #f5f5f5; padding: 30px;">
    <div class="row" style="margin-bottom: 30px;">
        <div class="col-sm-12 col-md-8">
            <form action="/Recipes" method="get" class="form-inline">
                <div class="form-group">
                    <div class="input-group" style="width:100%">
                        <input class="form-control" id="SearchString" name="SearchString" type="text" value="">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">search</button>
            </form>
        </div>
        <div class="col-sm-12 col-md-4 text-right">
            <a class="btn btn-primary" href="/Recipes/Create">Create New</a>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row" style="margin-bottom:10px; display: flex;">
            <div class="col-md-4">
                <img class="img-responsive" src="@Html.DisplayFor(modelItem => item.MainPicture)" />
            </div>
            <div class="col-md-6">
                <h2>@Html.DisplayFor(modelItem => item.RecipeName)</h2>
                <p> Time: @Html.DisplayFor(modelItem => item.Time) minutes</p>
                <p>
                    <b>Ingredients used:</b>
                    <ul>
                        @foreach (Ingredient ingredient in item.Ingredients)
                        {
                            <li>@ingredient.IngredientName</li>
                        }
                    </ul>
                </p>
            </div>
            <div class="col-md-2" style="display: flex; flex-direction: column; justify-content: center;">
                @Html.ActionLink("Edit", "Edit", new { id = item.RecipeID }, new { @class = "btn btn-sm btn-default", @style ="margin-bottom:4px;" }) 
                @Html.ActionLink("Details", "Details", new { id = item.RecipeID }, new { @class = "btn btn-sm btn-default" ,  @style ="margin-bottom:4px;" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.RecipeID }, new { @class = "btn btn-sm btn-default", @style ="margin-bottom:4px;" })
            </div>
        </div>
    }
</div>



