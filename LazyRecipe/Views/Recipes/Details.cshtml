@model LazyRecipe.Models.Recipe

@{
    ViewBag.Title = Model.RecipeName + " Details";
}
<link href='https://fonts.googleapis.com/css?family=Amiko' rel='stylesheet'>
<div class="content" style="background: #f5f5f5; padding: 50px;">
    <div class="row wrapper" style="background-image:url('@Html.DisplayFor(model => model.MainPicture)')">
        <div class="col-md-12 text-center">
            <h1>@Html.DisplayFor(model => model.RecipeName)</h1>
         </div>
    </div>
    <div class="row" style="margin-top: 50px;   ">
        <div class="col-md-2">
           <b>@Html.DisplayNameFor(model => model.Time)</b> 
        </div>
        <div class="col-md-10">
            <p>@Html.DisplayFor(model => model.Time) minutes</p>
        </div>
        <div class="col-md-2">
            <b>@Html.DisplayNameFor(model => model.Instructions)</b>
        </div>
        <div class="col-md-10">
            <p>@Html.DisplayFor(model => model.Instructions)</p>
        </div>
        <div class="col-md-2">
            <b>@Html.DisplayNameFor(model => model.UserID)</b>
        </div>
        <div class="col-md-10">
            <p>@Html.DisplayFor(model => model.UserID)</p>
        </div>
        <div class="col-md-2">
            <b>@Html.DisplayNameFor(model => model.Ingredients)</b>
        </div>
        <div class="col-md-10">
           @foreach (var item in Model.Ingredients)
           {
              <p>@Html.DisplayFor(modelItem => item.IngredientName)</p>
           } 
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-2">
            @Html.ActionLink("Edit", "Edit", new { id = Model.RecipeID }, new { @class = "btn btn-md btn-primary" }) 
            <a class="btn btn-md btn-default" href="javascript:history.back()">Back to List</a>

        </div>
    </div>
</div>


